#!/usr/bin/fish

{{ ansible_managed | comment }}

# set PATH so it includes users
# private bin directory if it exists
if test -d "$HOME/bin"
  set -x PATH "$HOME/bin:$PATH"
end

# xsession reload script
source ~/.xsession.reload.fish

{% if home_profile != "vdesk" %}
blueman-applet &
pasystray &
nm-applet &
{% endif %}

{% if home_profile != "presentation" and home_profile != "vdesk" %}
/usr/local/bin/screensaver-start &
{% endif %}

{% if home_profile == "presentation" %}
unclutter &
{% endif %}

exec /usr/bin/i3
